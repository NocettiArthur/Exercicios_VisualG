Algoritmo "Problema_troco_verificado"

Var

  preco, dinheiro, troco, resta : real
  quantidade : inteiro

Inicio

 escreva ("Preço unitário do produto: R$")
 leia (preco)
 escreva ("Quantidade comprada: ")
 leia (quantidade)
 escreva ("Dinheiro recebido: R$")
 leia (dinheiro)
 
 se dinheiro >= (preco * quantidade) entao
 troco <- dinheiro - preco * quantidade
 escreval ("Troco: R$",troco)

 senao
 
 resta <- preco * quantidade - dinheiro
 escreval ("Dinheiro insufciente, resta: R$",resta)
 fimse
 
Fimalgoritmo
